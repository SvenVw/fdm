{
    "name": "@svenvw/fdm-source",
    "version": "0.0.0",
    "description": "Monorepo for fdm",
    "homepage": "https://github.com/SvenVw/fdm",
    "bugs": "https://github.com/SvenVw/fdm/issues/new",
    "type": "module",
    "private": true,
    "workspaces": [
        "fdm-core",
        "fdm-data",
        "fdm-docs",
        "fdm-app",
        "fdm-calculator"
    ],
    "scripts": {
        "test": "turbo run test-coverage --filter=@svenvw/fdm-core --filter=@svenvw/fdm-calculator",
        "build": "turbo run build",
        "build-docs": "turbo run build-docs",
        "watch": "turbo run watch",
        "changeset": "changeset",
        "prerelease": "turbo build --filter=@svenvw/fdm-core --filter=@svenvw/fdm-data --filter=@svenvw/fdm-calculator && changeset publish ",
        "lint": "oxlint -c .oxlintrc.json .",
        "lint:fix": "oxlint -c .oxlintrc.json . --fix",
        "format": "oxfmt .",
        "format:check": "oxfmt --check .",
        "check": "pnpm lint && pnpm format:check",
        "fix": "pnpm lint:fix && pnpm format"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "oxfmt": "^0.16.0",
        "oxlint": "^1.31.0",
        "turbo": "^2.6.1"
    },
    "packageManager": "pnpm@10.23.0",
    "pnpm": {
        "packageExtensions": {
            "vite-plugin-dts": {
                "dependenciesMeta": {
                    "@volar/typescript": {
                        "optional": true
                    },
                    "vue-tsc": {
                        "optional": true
                    },
                    "@vue/language-core": {
                        "optional": true
                    }
                }
            }
        },
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "@sentry-internal/node-cpu-profiler",
            "@sentry/cli",
            "@swc/core",
            "@tailwindcss/oxide",
            "core-js",
            "core-js-pure",
            "esbuild"
        ]
    }
}
