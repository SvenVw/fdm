{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": [
        "fdm-core/src/**/*",
        "fdm-data/src/**/*",
        "fdm-calculator/src/**/*"
    ],
    "exclude": ["node_modules", "**/*.test.ts", "**/dist", "**/build"]
}
