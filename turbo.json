{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**", "build/**"],
            "passThroughEnv": [
                "SENTRY_AUTH_TOKEN",
                "VITE_SENTRY_ORG",
                "VITE_SENTRY_PROJECT"
            ],
            "dependsOn": ["^build"]
        },
        "build-docs": {
            "outputs": ["build/**"],
            "dependsOn": ["^build-docs"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "//#format-and-lint": {},
        "//#format-and-lint:fix": {
            "cache": false
        },
        "//#format-and-lint:fix-unsafe": {
            "cache": false
        },
        "test-coverage": {
            "outputs": [],
            "persistent": false,
            "cache": false,
            "env": [
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_DB",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD"
            ]
        },
        "watch": {
            "persistent": true,
            "cache": false,
            "env": [
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_DB",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "watch-docs": {
            "persistent": true,
            "cache": false
        }
    }
}
