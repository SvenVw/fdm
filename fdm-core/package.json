{
  "name": "fdm-core",
  "private": false,
  "version": "0.3.1",
  "description": "Interface for the Farm Data Model",
  "license": "MIT",
  "homepage": "https://svenvw.github.io/fdm/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SvenVw/fdm.git"
  },
  "bugs": "https://github.com/SvenVw/fdm/issues/new",
  "author": {
    "name": "Sven Verweij",
    "email": "37927107+SvenVw@users.noreply.github.com",
    "url": "https://github.com/SvenVw"
  },
  "type": "module",
  "main": "./dist/fdm-core.umd.cjs",
  "module": "./dist/fdm-core.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/fdm-core.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/fdm-core.umd.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "dotenvx run -- vite",
    "db:generate": "npx drizzle-kit generate",
    "document": "npx typedoc src --plugin typedoc-plugin-missing-exports",
    "dotenvx": "dotenvx",
    "build": "vite build",
    "check-types": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm build",
    "preview": "vite preview",
    "test": "dotenvx run -- vitest run",
    "watch": "dotenvx run -- vitest",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.20.1",
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.7.9",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.13.0",
    "fs-extra": "^11.2.0",
    "globals": "^15.11.0",
    "typedoc": "^0.26.10",
    "typedoc-plugin-missing-exports": "^3.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.12",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.35.3",
    "graphql": "^16.9.0",
    "nanoid": "^5.0.7",
    "postgres": "^3.4.4"
  },
  "packageManager": "pnpm@9.12.2",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "pnpm": {
    "packageExtensions": {
      "vite-plugin-dts": {
        "dependenciesMeta": {
          "@volar/typescript": {
            "optional": true
          },
          "vue-tsc": {
            "optional": true
          },
          "@vue/language-core": {
            "optional": true
          }
        }
      }
    }
  }
}